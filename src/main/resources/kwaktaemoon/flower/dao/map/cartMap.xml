<?xml version='1.0' encoding='utf-8' ?>
<!DOCTYPE mapper PUBLIC '-//mybatis.org//DTD Mapper 3.0//EN'
	'http://mybatis.org/dtd/mybatis-3-mapper.dtd'>
<mapper namespace='kwaktaemoon.flower.dao.map.CartMap'>
	<select id='selectCarts' resultMap='cartMap'>
		select *
		from carts ca, flowers fl
		where ca.flower_num = fl.flower_num
		order by cart_num desc
	</select>
	
	<select id='selectClothNum' resultMap='cartMap2'>
		select flower_num, amount from carts
		where cart_num = #{cartNum}
	</select>
	
	<resultMap id='cartMap' type='cart'>
		<id property='cartNum' column='cart_num' />
		<result property='userId' column='user_id' />
		<result property='flowerNum' column='fower_num' />
		<result property='amount' column='amount' />

		
	</resultMap>
	
	<resultMap id='cartMap2' type='cart'>
		<result property='flowerNum' column='flower_num' />
		<result property='amount' column='amount' />
	</resultMap>

	<insert id='insertCart'>
		insert into carts(cart_num, amount, flower_num, user_id)
		values (CARTS_CARTNUM_SEQ.nextval, #{amount}, #{flowerNum}, #{userId})
	</insert>

	<update id='updateCart'>
		update cart
		set amount = #{amount}
		where cart_num = #{cartNum}
	</update>

	<delete id='deleteCart'>
		delete carts
		where cart_num = #{cartNum}
	</delete>
	
	<delete id='emptyCart'>
		delete carts
		where user_id = #{userId}
	</delete>
</mapper>