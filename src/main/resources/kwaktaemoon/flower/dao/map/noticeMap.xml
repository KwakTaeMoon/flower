<?xml version='1.0' encoding='utf-8' ?>
<!DOCTYPE mapper PUBLIC '-//mybatis.org//DTD Mapper 3.0//EN'
	'http://mybatis.org/dtd/mybatis-3-mapper.dtd'>
<mapper namespace='kwaktaemoon.flower.dao.map.NoticeMap'>
	<select id='selectNotices' resultMap='noticeMap'>
      	select notice_num, title, reg_date
		from notices
		order by notice_num
   </select>
   
   <select id='selectNotice' resultMap='searchMap'>
   		select notice_num, title, content, reg_date
   		from notices
   		where notice_num = #{noticeNum}
   </select>
   
   <resultMap id='noticeMap' type='Notice'>
      <id property='noticeNum' column='notice_num'/>
      <result property='title' column='title'/>
      <result property='regDate' column='reg_date'/>
   </resultMap>
   
   <resultMap id='searchMap' type='Notice'>
      <id property='noticeNum' column='notice_num'/>
      <result property='title' column='title'/>
      <result property='content' column='content'/>      
      <result property='regDate' column='reg_date'/>   		
   </resultMap>
   
   <insert id="insertNotice">
   		insert into notices(notice_num, title, content, reg_date)
   		values (notice_noticenum_seq.nextval, #{title}, #{content}, sysdate)
   </insert>

	<update id='updateNotice'>
		update notices
		set title = #{title},
			content = #{content}
		where notice_num = #{noticeNum}
	</update>
   
   <delete id='deleteNotice'>
   		delete notices
   		where notice_num = #{noticeNum}
   </delete>
</mapper>